<script>
    // Fade in animation on scroll
    function fadeInOnScroll() {
        const elements = document.querySelectorAll('.fade-in');
        elements.forEach(element => {
            const elementTop = element.getBoundingClientRect().top;
            const elementVisible = 150;

            if (elementTop < window.innerHeight - elementVisible) {
                element.classList.add('visible');
            }
        });
    }

    window.addEventListener('scroll', fadeInOnScroll);
    fadeInOnScroll(); // Initial check

    // Add click feedback to cards
    document.querySelectorAll('.card').forEach(card => {
        card.addEventListener('click', function() {
            this.style.transform = 'scale(0.98) translateY(-5px)';
            setTimeout(() => {
                this.style.transform = '';
            }, 150);
        });
    });

    // Enhanced button interaction
    document.querySelector('.btn-primary').addEventListener('mouseenter', function() {
        this.textContent = '✨ ' + this.textContent + ' ✨';
    });

    document.querySelector('.btn-primary').addEventListener('mouseleave', function() {
        this.textContent = this.textContent.replace(/✨ /g, '').replace(/ ✨/g, '');
    });
</script>