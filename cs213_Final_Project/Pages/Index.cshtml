@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<section class="hero-banner text-white d-flex align-items-center justify-content-center text-center">
    <div class="overlay"></div>
    <div class="container position-relative">
        <h1 class="display-4 fw-bold">Fargo Springs Spa</h1>
        <p class="lead mb-4">Your local destination for relaxation, wellness, and rejuvenating spa experiences in Fargo.</p>
        @using Microsoft.AspNetCore.Identity
        @inject SignInManager<IdentityUser> SignInManager

        <a class="btn btn-primary btn-lg"
           href="@(SignInManager.IsSignedIn(User) ? "/Appointment" : "/Login")">
            Book an appointment!
        </a>

    </div>
</section>


<section class="py-5">
    <div class="container">
        <h2 class="text-center mb-5">Services we offer</h2>
        <div class="row justify-content-center">

            <!-- Manicure Card -->
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body text-center">
                        <h5 class="card-title">Manicure</h5>
                        <p class="card-text">
                            Treat your hands to a luxurious manicure designed to keep them looking and feeling their best.
                        </p>
                    </div>
                </div>
            </div>

            <!-- Full Body Massage Card (the main one) -->
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-lg border-primary featured-service">
                    <div class="card-body text-center">
                        <h5 class="card-title text-primary">Full Body Massage</h5>
                        <p class="card-text">
                            Relax and unwind with our full body massage that melts away tension and stress.
                        </p>
                    </div>
                </div>
            </div>

            <!-- Pedicure Card -->
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body text-center">
                        <h5 class="card-title">Pedicure</h5>
                        <p class="card-text">
                            Give your feet the care they deserve with our rejuvenating pedicure. Includes nail trimming, exfoliation.
                        </p>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>


<section class="py-5 bg-light">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h3>The Fargo Springs Difference</h3>
                <p>We are a locally owned Fargo spa committed to comfort, wellness, and personalized care...</p>
            </div>
            <div class="col-md-6 text-center">
                <img src="/assets/spa-image-1.jpg" class="img-fluid rounded" alt="Spa Experience">
            </div>
        </div>
    </div>
</section>

<section class="py-5">
    <div class="container">
        <h4 class="text-center mb-4">Why customers relax with us</h4>

        <figure class="text-center mb-5">
            <blockquote class="blockquote">
                <p>"The massage I got at Fargo Springs Spa was exactly what I needed after a stressful week..."</p>
            </blockquote>
            <figcaption class="blockquote-footer">
                Josie B., <cite title="Fargo, ND">Fargo, ND</cite>
            </figcaption>
        </figure>

        <figure class="text-center">
            <blockquote class="blockquote">
                <p>"I booked a manicure and pedicure online... Definitely coming back."</p>
            </blockquote>
            <figcaption class="blockquote-footer">
                Emma F., <cite title="West Fargo">West Fargo</cite>
            </figcaption>
        </figure>
    </div>
</section>


<section class="py-5 bg-light">
    <div class="container">
        <h4 class="text-center mb-4">Our Team</h4>
        <div class="row justify-content-center text-center">
            <div class="col-6 col-md-2 mb-4">
                <img src="/assets/spa-staff/staff-1.jpg" class="team-photo" alt="Team" />
                <p>Romeena De Silva<br /><small>Nail Technician</small></p>
            </div>
